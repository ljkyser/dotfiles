# general aliases
alias cd..="cd .."
alias l="ls -al"
alias lp="ls -p"
alias o="open ."

# the "kp" alias ("que pasa"), in honor of tony p.
alias kp="ps auxwww"

# git aliases
alias g="git"
alias ga="g add"
alias gaa="g add -A"
alias gb="g branch"
alias gba="g branch -a"
alias gc="g checkout"
alias gf="g fetch"
alias gi="g commit"
alias gl="g log"
alias glo="gl --oneline"
alias gs="g status"
alias pop="g stash pop"
alias stash="g stash"
alias glc="gl -1 HEAD"

# editor aliases
alias a="atom ."
alias m="mate -w ."

# misc
alias dotfiles='cd ~/.dotfiles'
alias ns='nslookup'
alias path='echo $PATH'
alias reload='. ~/.bash_profile'

if [ `uname` == 'Darwin' ]; then
  alias ls="ls -G"
fi
